<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal" >

    <ImageView
        android:id="@+id/task_icon"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:clickable="false"
        android:contentDescription="icon"
        android:focusable="false"
        android:paddingLeft="3dp"
        android:paddingRight="3sp"
        android:paddingTop="3sp"
        android:paddingBottom="3sp"
        android:src="@drawable/ic_launcher" />

    <RelativeLayout
        android:id="@+id/task_name_memory"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/task_icon"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/task_icon" >

        <TextView
            android:id="@+id/task_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:focusable="false"
            android:text="@string/task_name"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/task_memory"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@id/task_name"
            android:focusable="false"
            android:text="@string/task_memory"
            android:textSize="12sp" />
    </RelativeLayout>

    <CheckBox
        android:id="@+id/task_check_box"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_alignBottom="@+id/task_name_memory"
        android:layout_alignParentRight="true"
        android:focusable="false"
        android:paddingRight="2dp" />

</RelativeLayout>